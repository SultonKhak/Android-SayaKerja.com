<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/gridLayout11"
        android:layout_width="411dp"
        android:layout_height="77dp"
        android:background="#9577CB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <GridLayout
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0">

            <Button
                android:id="@+id/pilihanakun"
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/baseline_menu_1">
            </Button>
        </GridLayout>

        <GridLayout
            android:layout_width="247dp"
            android:layout_height="27dp"
            android:layout_row="0"
            android:layout_column="2">

            <TextView
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@android:color/white"
                android:textSize="24dp"
                android:textStyle="bold">
            </TextView>
        </GridLayout>

        <GridLayout
            android:layout_width="239dp"
            android:layout_height="47dp"
            android:layout_row="1"
            android:layout_column="2">

            <Button
                android:id="@+id/daftarpelamar"
                android:layout_width="53dp"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/baseline_assignment_ind_24px">
            </Button>
        </GridLayout>
    </GridLayout>

    <GridLayout
        android:layout_width="422dp"
        android:layout_height="34dp"
        android:background="#9577CB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.135">

        <TextView
            android:layout_width="301dp"
            android:layout_height="42dp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#9577CB"
            android:text="Daftar Lowongan"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            android:textStyle="bold">
        </TextView>
    </GridLayout>

    <GridLayout
        android:layout_width="399dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/sinestesia_8">
        </GridLayout>

        <GridLayout
            android:layout_width="271dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="2">

            <Button
                android:id="@+id/adminpenginapan"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@android:color/white"
                android:text="Admin Penginapan"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_row="1"
                android:layout_column="0"
                android:text="> Tebet, Jakarta Selatan"
                android:textColor="@android:color/black">
            </TextView>

            <TextView
                android:layout_row="2"
                android:layout_column="0"
                android:text="Rp. 3.000.000"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

        </GridLayout>
    </GridLayout>

    <GridLayout
        android:layout_width="400dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44">

        <GridLayout
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/sinestesia1">
        </GridLayout>

        <GridLayout
            android:layout_width="272dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="2">

            <Button
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@android:color/white"
                android:text="Satpam Komplek"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_row="1"
                android:layout_column="0"
                android:text="> Kalibata, Jakarta Selatan"
                android:textColor="@android:color/black">
            </TextView>

            <TextView
                android:layout_row="2"
                android:layout_column="0"
                android:text="Rp. 3.400.000"
                android:textColor="@android:color/black"
                android:textSize="12dp" />
        </GridLayout>
    </GridLayout>

    <GridLayout
        android:layout_width="393dp"
        android:layout_height="84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.647">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/sinestesia_4">
        </GridLayout>

        <GridLayout
            android:layout_width="263dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="2">

            <Button
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@android:color/white"
                android:text="Desain Grafis"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_row="1"
                android:layout_column="0"
                android:text="> Duren Sawit, Jakarta Timur"
                android:textColor="@android:color/black">
            </TextView>

            <TextView
                android:layout_row="2"
                android:layout_column="0"
                android:text="Rp. 3.700.000"
                android:textColor="@android:color/black"
                android:textSize="12dp" />
        </GridLayout>
    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout12"
        android:layout_width="396dp"
        android:layout_height="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.844">

        <GridLayout
            android:layout_width="123dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/sinestesia_5"></GridLayout>

        <GridLayout
            android:layout_width="265dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="2">

            <Button
                android:layout_width="239dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@android:color/white"
                android:text="Photografer"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_row="1"
                android:layout_column="0"
                android:text="> Kebon Jeruk, Jakarta Barat"
                android:textColor="@android:color/black"></TextView>

            <TextView
                android:layout_row="2"
                android:layout_column="0"
                android:text="Rp. 3.500.000"
                android:textColor="@android:color/black"
                android:textSize="12dp" />
        </GridLayout>

    </GridLayout>

    <Button
        android:id="@+id/tambahlowongan"
        android:layout_width="179dp"
        android:layout_height="50dp"
        android:background="@android:color/background_dark"
        android:text="Tambah Lowongan"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971" />

</androidx.constraintlayout.widget.ConstraintLayout>
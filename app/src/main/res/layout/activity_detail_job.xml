<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="413dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:background="#157FFB">

        <TextView
            android:layout_width="392dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Detail Pelamar"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            android:background="#157FFB"/>
    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="368dp"
        android:layout_height="109dp"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/sinestesia_8"></ImageView>

        <GridLayout
            android:layout_width="231dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="2">

            <TextView
                android:layout_row="0"
                android:layout_column="0"
                android:text="Penginapan Hidayah"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_row="1"
                android:layout_column="0"
                android:text="Admin Penginapan"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_row="2"
                android:layout_column="0"
                android:text=">Tebet, Jakarta Selatan"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_row="3"
                android:layout_column="0"
                android:text="Rp. 3.000.000"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

        </GridLayout>

    </GridLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resume"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.305" />

    <GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="368dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.417"
        android:background="@android:color/holo_blue_light">

        <TextView
            android:text="> Pekerjaan Admin ini menghandel semua pengunjung hotel \n> Membalas setiap pertanyaan tentang informasi penginapan secara online"
            android:textColor="@android:color/black">
        </TextView>

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informasi Tambahan"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.578" />

    <GridLayout
        android:id="@+id/gridLayout4"
        android:layout_width="369dp"
        android:layout_height="149dp"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Jenis Pekerjaan"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Full-time on site"
            android:textColor="@android:color/black"
            android:textSize="12dp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Jadwal Kerja"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="Senin - Jum'at"
            android:textColor="@android:color/black"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Jenis Perusahaan"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:text="Tour and Travel Agency"
            android:textColor="@android:color/black"
            android:textSize="12dp" />
    </GridLayout>

    <Button
        android:id="@+id/lamarkerja"
        android:layout_width="103dp"
        android:layout_height="35dp"
        android:background="#157FFB"
        android:text="Lamar"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971" />

</androidx.constraintlayout.widget.ConstraintLayout>
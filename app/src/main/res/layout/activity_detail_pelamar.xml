<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="413dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:background="#9577CB">

        <TextView
            android:layout_width="392dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Detail Pelamar"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            android:background="#9577CB"/>
    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="368dp"
        android:layout_height="109dp"
        android:background="#9577CB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="81dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/johm_kan_1">
        </ImageView>

        <GridLayout
            android:layout_width="216dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="2">

            <TextView
                android:layout_row="0"
                android:layout_column="0"
                android:text="Salman Farizi"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:layout_row="1"
                android:layout_column="0"
                android:text=">Duren Sawit, Jakarta Timur"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_row="2"
                android:layout_column="0"
                android:text="   Laki laki / 22"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

        </GridLayout>

    </GridLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resume"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.305" />

    <GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="368dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.417"
        android:background="#9577CB">

        <TextView
            android:text="> Saya siap berkerja dimanapun dan saya siap berkerja dalam kurun waktu pagi hingga sore \n> Kemampuan photoshop saya yaitu dalam membuat banner dan edit foto"
            android:textColor="@android:color/white">
        </TextView>

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informasi Tambahan"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.578" />

    <GridLayout
        android:id="@+id/gridLayout4"
        android:layout_width="369dp"
        android:layout_height="149dp"
        android:background="#9577CB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81">

        <TextView
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Keahlian Utama"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Service Laptop, Photoshop"
            android:textColor="@android:color/white"
            android:textSize="12dp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Riwayat Pekerjaan"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="Rexa Banner, Filcom Service"
            android:textColor="@android:color/white"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Penghargaan"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:text="Not Yet"
            android:textColor="@android:color/white"
            android:textSize="12dp" />
    </GridLayout>

    <Button
        android:id="@+id/rekrutpekerja"
        android:layout_width="103dp"
        android:layout_height="35dp"
        android:background="#9577CB"
        android:text="Rekrut"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971" />


</androidx.constraintlayout.widget.ConstraintLayout>